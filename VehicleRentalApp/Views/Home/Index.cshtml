@{
    ViewData["Title"] = "Welcome to VehicleRentalApp";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to VehicleRentalApp</h1>
        <p class="lead">
            Your trusted partner for hassle-free vehicle rentals. Choose from a wide selection of vehicles, all at competitive rates.
        </p>
    </div>

    <hr class="my-4">

    <div class="row text-center mt-5">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="/images/vehicles/why_us.jpg" class="card-img-top" alt="Why Choose Us">
                <div class="card-body">
                    <h5 class="card-title">Why Choose Us?</h5>
                    <p class="card-text">
                        With over 10 years of experience, we are a trusted name in vehicle rentals.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="/images/vehicles/cert.jpg" class="card-img-top" alt="Certified Excellence">
                <div class="card-body">
                    <h5 class="card-title">Certified Excellence</h5>
                    <p class="card-text">
                        Accredited with industry-leading certifications for quality and safety.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="/images/vehicles/trust.jpg" class="card-img-top" alt="Trusted by Thousands">
                <div class="card-body">
                    <h5 class="card-title">Trusted by Thousands</h5>
                    <p class="card-text">
                        Join thousands of happy customers worldwide who trust us for their transportation needs.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <h2>Our Features</h2>
        <p class="lead">
            Here's why we stand out:
        </p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Wide Selection:</strong> Choose from cars, trucks, and SUVs.
            </li>
            <li class="list-group-item">
                <strong>Affordable Pricing:</strong> No hidden fees—just competitive rates.
            </li>
            <li class="list-group-item">
                <strong>24/7 Support:</strong> Always ready to assist you.
            </li>
        </ul>
    </div>

    <div class="text-center mt-5">
        <h2>Start Your Journey Today!</h2>
        <p class="lead">
            Ready to rent a vehicle? Sign up now and experience the difference with VehicleRentalApp.
        </p>
        <a href="/Account/Register" class="btn btn-primary btn-lg">Register Now</a>
    </div>
</div>
