@model VehicleRentalApp.Models.Vehicle

<div class="container mt-5">
    <h1 class="text-center">Add a New Vehicle</h1>
    <hr />
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-floating mb-3">
            <input asp-for="Brand" class="form-control" placeholder="Brand" />
            <label asp-for="Brand">Brand</label>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Model" class="form-control" placeholder="Model" />
            <label asp-for="Model">Model</label>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Year" class="form-control" placeholder="Year" type="number" />
            <label asp-for="Year">Year</label>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LicensePlate" class="form-control" placeholder="License Plate" />
            <label asp-for="LicensePlate">License Plate</label>
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="PricePerDay" class="form-control" placeholder="Price Per Day" type="number" step="0.01" />
            <label asp-for="PricePerDay">Price Per Day</label>
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Image" class="form-label">Upload Image</label>
            <input type="file" name="image" id="Image" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success w-100">Add Vehicle</button>
    </form>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <strong>Errors:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
