@model VehicleRentalApp.Models.Vehicle

<div class="container mt-5">
    <h1 class="text-center">Edit Vehicle</h1>
    <hr />
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-floating mb-3">
            <input asp-for="Brand" class="form-control" placeholder="Brand" />
            <label asp-for="Brand">Brand</label>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Model" class="form-control" placeholder="Model" />
            <label asp-for="Model">Model</label>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Year" class="form-control" placeholder="Year" type="number" />
            <label asp-for="Year">Year</label>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LicensePlate" class="form-control" placeholder="License Plate" />
            <label asp-for="LicensePlate">License Plate</label>
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="PricePerDay" class="form-control" placeholder="Price Per Day" type="number" step="0.01" />
            <label asp-for="PricePerDay">Price Per Day</label>
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <select asp-for="IsAvailable" class="form-control">
                <option value="true" selected>Available</option>
                <option value="false">Not Available</option>
            </select>
            <label asp-for="IsAvailable">Availability</label>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="image" id="image" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success w-100">Save Changes</button>
    </form>
</div>
